{% extends "BaklavaBorekBundle::layout.html.twig" %}

{% block content %}
    <a class="index-create-user" href="{{ path('BaklavaBorekBundle_User_create') }}"><button type="button" class="btn btn-success">{{ "Create User" | trans }}</button></a>

    <table class="user-data-table table table-striped table-bordered">
        <thead>
            <tr>
                <th>{{ "Name" | trans }}</th>
                <th>{{ "Surname" | trans }}</th>
                <th>{{ "Email" | trans }}</th>
                <th>{{ "Created At" | trans }}</th>
                <th>{{ "Updated At" | trans }}</th>
                <th>{{ "Operations" | trans }}</th>
            </tr>
        </thead>

        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ (user.created / 1000)|date('Y-m-d') }}</td>
                    <td>{{ (user.updated / 1000)|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ path('BaklavaBorekBundle_User_edit', {'userId': user.id}) }}"><button type="button" class="btn btn-primary">{{ "Edit" | trans }}</button></a>
                        <a href="{{ path('BaklavaBorekBundle_User_delete', {'userId': user.id}) }}"><button type="button" class="btn btn-danger">{{ "Delete" | trans }}</button></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}